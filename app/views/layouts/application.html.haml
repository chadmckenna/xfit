!!!
%html
  %head
    %title xfit
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    #header
      %span xfit
    - if current_user
      #nav
        .right
          = link_to 'Logout', logout_path
        .left
          = nav current_user
      .clear		
    #container
      - if notice
        #flash_notice= notice
      = yield
