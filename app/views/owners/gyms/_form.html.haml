= form_for [:owners, @gym] do |f|
  -if @gym.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gym.errors.count, "error")} prohibited this gym from being saved:"
      %ul
        - @gym.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :rss_url
    = f.text_field :rss_url
  .actions
    %button Save
